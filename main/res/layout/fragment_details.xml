<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhi.clean_india.com.example.abhi.clean_india.adapter.DetailsFragment">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fadeScrollbars="false"
            >
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/linear">

                    <LinearLayout
                        android:id="@+id/informations_container"
                        android:layout_width="377dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/linear"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:gravity="center"
                        android:paddingTop="14dp"
                        android:background="@color/white"
                        android:paddingBottom="14dp"
                        android:layout_gravity="center_horizontal">

                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view4"
                            android:layout_width="match_parent"
                            android:layout_height="290dp"
                            android:layout_marginTop="15dp"
                            card_view:cardCornerRadius="4dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/cardview_light_background">
                                <ImageView
                                    android:id="@+id/title5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:src="@drawable/download"
                                    android:textColor="@color/btn_login"
                                    android:textStyle="bold"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/title5"
                                    android:id="@+id/title6"
                                    android:padding="8dp"
                                    android:text="New Campaign Near Alandi Roads, Pune"
                                    android:textColor="@color/input_register_bg"
                                    android:textSize="20dp" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="GOING"
                                    android:id="@+id/button2"
                                    android:layout_alignParentBottom="true"
                                    android:layout_toLeftOf="@+id/button3"
                                    android:layout_toStartOf="@+id/button3" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MAY BE"
                                    android:id="@+id/button3"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="   110 people Going"
                                    android:id="@+id/textView3"
                                    android:layout_alignParentBottom="true"
                                    android:layout_below="@+id/title6"
                                    android:layout_toLeftOf="@+id/button2"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view5"
                            android:layout_width="match_parent"
                            android:layout_height="290dp"
                            android:layout_marginTop="15dp"
                            card_view:cardCornerRadius="4dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/cardview_light_background">
                                <ImageView
                                    android:id="@+id/tite5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:src="@drawable/sw"
                                    android:textColor="@color/btn_login"
                                    android:textStyle="bold"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tite5"
                                    android:id="@+id/tite6"
                                    android:padding="8dp"
                                    android:text="Pashan Lake Clean Campaign"
                                    android:textColor="@color/input_register_bg"
                                    android:textSize="20dp" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="GOING"
                                    android:id="@+id/buttn2"
                                    android:layout_alignParentBottom="true"
                                    android:layout_toLeftOf="@+id/buttn3"
                                    android:layout_toStartOf="@+id/buttn3" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MAY BE"
                                    android:id="@+id/buttn3"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="   124 people Going"
                                    android:id="@+id/textViw3"
                                    android:layout_alignParentBottom="true"
                                    android:layout_below="@+id/tite6"
                                    android:layout_toLeftOf="@+id/buttn2"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</FrameLayout>
